.down2List{
    width: 690rpx;
      background-color: #ffffff;
    border-radius: 20rpx;
    margin: 0 auto;
    padding: 25rpx 50rpx 25rpx 25rpx;
    box-sizing: border-box;
    /* height: 245rpx; */
  }
  .down2List{
    display: flex;
    align-items: center;
  }
  .downPic{
    width: 245rpx;
      height: 245rpx;
    border-radius: 15rpx;
    margin-right: 25rpx;
    flex-shrink: 0;
  }
  .shopName{
    width: 281rpx;
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: bold;
  }
  .shopPrice{
    color: #f65e08;
    font-size: 30rpx;
    font-weight: bold;
  }
  .money{
    font-size: 24rpx;
  }
  .shopdk{
    font-size: 22rpx;
    color: #ed4e65;
    background-color: #fdf4f5;
      border-radius: 2rpx;
    border: solid 1rpx #ebe7e6;
    height: 28rpx;
    line-height: 28rpx;
    font-weight: normal;
  }
  .peo{
    color: #7b7b7b;
    font-size: 24rpx;
  }
  .buy{
    background-color: #fad00e;
    border-radius: 5rpx;
    color: #4e3400;
    font-size: 26rpx;
    margin-left: auto;
    line-height: 48rpx;
    height: 48rpx;
    padding: 0 15rpx;
  }
  .logo{
    width: 44rpx;
      height: 44rpx;
    border-radius: 5rpx;
    margin-right: 15rpx;
  }
  .arw{
    width: 11rpx;
    height: 19rpx;
    margin-left: auto;
  }
  .shopTitle,.xf{
    display: flex;
    align-items: center;
  }
  .down2listMsg{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 245rpx;
    width: 100%;
  }
  image{
      background-color: #ddd;
  }

  .downList{
    display: flex;
    margin-top: 26rpx;
    padding-bottom: 25rpx;
    width: 670rpx;
    margin: 0 auto;
    padding-top: 25rpx;
  }
  .down{
    width: 670rpx;
    margin: 0 auto;
  }
  .star1{
    width: 30rpx;
    height: 30rpx;
  }
  .icon{
    color: #05bfdb;
    font-size: 23rpx;
    width: 77rpx;
      height: 30rpx;
      border-radius: 5rpx;
    border: solid 1rpx #05bfdb;
    line-height: 30rpx;
    text-align: center;
    margin-left: auto;
  }
  .occupation{
    color: #8a8a8a;
    font-size: 28rpx;
    margin-left: 20rpx;
  }
  .name1{
    color: #2f2f2f;
    font-size: 32rpx;
    display: flex;
    align-items: center;
  }
  .starImg{
    display: flex;
    align-items: center;
  }
  .info1{
    line-height: 50rpx;
  }
  .userAvatar{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #ddd;
  }
  .star{
    width: 30rpx;
    height: 30rpx;
  }
  .sc{
    font-size: 25rpx;
    color: #8a8a8a;
    width: 660rpx;
    margin: 0 auto;
    margin-bottom: 35rpx;
  }
  .sc text{
      font-weight: bold;
  }
  .yy{
    font-size: 25rpx;
    color: #f98684;
  }
  .address image{
    width: 40rpx;
    height: 40rpx;
    background-color: #ddd;
    display: block;
    margin: 0 auto;
    margin-bottom: 10rpx;
}
.address{
    font-size: 28rpx;
    display: flex;
    border-top: 1rpx solid rgba(228, 228, 228, 1);
    height: 110rpx;
    align-items: center;
    width: 660rpx;
    margin: 0 auto;
}
.tel{
    width: 200rpx;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-left: auto;
    font-size: 20rpx;
}
.tel>view{
    width: 100%;
}
.tab{
    display: flex;
    padding: 20rpx 45rpx;
    border-top: 1rpx solid #ddd;
    align-items: center;
    box-sizing: border-box;
}
.tab>view{
    width: 118rpx;
	height: 40rpx;
	background-image: linear-gradient(130deg, 
		#fd8e7e 0%, 
		#ec7094 100%), 
	linear-gradient(
		#05bfdb, 
		#05bfdb);
	background-blend-mode: normal, 
		normal;
    border-radius: 40rpx;
    font-size: 23rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0rpx;
    color: #ffffff;
    text-align: center;
    margin-right: 30rpx;
}
.down1{
    background-color: #f4f3f3;
}