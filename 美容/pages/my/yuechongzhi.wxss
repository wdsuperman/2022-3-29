/* pages/zhuxuehongbao/zhuxuehongbao.wxss */
.head{
    width: 750rpx;
    height: 586rpx;
    position: relative;
  }
  .head image{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }
  .red{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
  }
  .text{
    font-size: 25rpx;
    color: white;
    text-align: center;
    padding-top: 350rpx;
  }
  .num{
    font-size: 50rpx;
    color: white;
    text-align: center;
    margin-top: 20rpx;
  }
  .main{
    width: 625rpx;
    overflow: hidden;
    margin: 53rpx auto 0;
  }
  .main_item{
    width: 193rpx;
    height: 94rpx;
    border: 2rpx solid #000;/*#2aa6fb*/
    border-radius: 9rpx;
    padding-top: 15rpx;
    box-sizing: border-box;
    float: left;
    margin-right: 16rpx;
    margin-bottom: 13rpx;
  }
  .main_item:nth-of-type(3n){
    margin-right: 0;
  }
  .main_item_num{
    font-size: 28rpx;
    text-align: center;
  }
  .main_item_money{
    font-size: 18rpx;
    text-align: center;
    text-decoration: line-through;
  }
  .footer{
    margin-top: 51rpx;
    padding-bottom: 100rpx;
  
  }
  .btn{
    width: 625rpx;
    height: 78rpx;
    background: linear-gradient(to right,#2bd4fd,#2a7ef9);
    border-radius: 6rpx;
    text-align: center;
    color: white;
    margin: 0 auto;
    font-size: 28rpx;
    line-height: 78rpx;
  }
  .more{
    width: 750rpx;
    font-size: 24rpx;
    margin-top: 30rpx;
    text-align: center;
  }
  .clickmore{
    color: #2a7ff9;
  }
  page{
    height: 100%;
    width: 100%;
  }
  