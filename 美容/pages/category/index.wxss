/* pages/category/index.wxss */
.left{
    background-color: #f5f5f5;
    width: 180rpx;
    height: 100vh;
    flex-shrink: 0;
    position: fixed;
    left: 0;
    bottom: 0;
    overflow: scroll;
}
.left>view{
    text-align: center;
    /* height: 80rpx; */
    line-height: 80rpx;
    font-size: 30rpx;
}
.left>.active{
    background-color: #fff;
}
.wrap{
    border-top: 1rpx solid #f3f3f3;
    display: flex;
    justify-content: space-between;
    padding-left: 180rpx;
}
.list{
    width: 510rpx;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding-bottom: 10rpx;
}
.list image{
    display: block;
}
scroll-view{
    height: 100vh;
    overflow: scroll;
}
.img{
    width: 240rpx;
    height: 240rpx;
    border-radius: 10rpx;
}
.list>view{
    width: 240rpx;
    margin-top: 30rpx;
}
.logo{
    width: 30rpx;
    height: 30rpx;
    border-radius: 5rpx;
    margin-right: 10rpx;
}
.arrow{
    width: 20rpx;
    height: 20rpx;
    margin-left: auto;
}
.title{
    font-size: 28rpx;
    font-weight: bold;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.aot{
    display: flex;
    align-items: center;
    margin: 5rpx 0;
}
.buy{
    margin-left: auto;
    width: 60rpx;
    border-radius: 10rpx;
    line-height: 40rpx;
    height: 40rpx;
    font-size: 24rpx;
    background-color: #fbd00f;
    text-align: center;
}
.price{
    color: #f65e0b;
    font-size: 36rpx;
}
.price text{
    font-size: 24rpx;
}
.jf{
    background-color: #fef4f3;
    width: 130rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    color: #ed4e64;
    border:1rpx solid #ebe7e6;
    text-align: center;
    margin-top: 5rpx;
}
.info{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #7b7b7b;
}
.cidlist{
    font-size: 26rpx;
    color: #999;
}
.active1{
    font-weight: bold;
    color: #555;
}