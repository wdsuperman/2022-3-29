  border: 0

}
.tabbar>button{
  width: 100%;
  text-align: center;
  background-color: #fff;
  height: 130rpx;line-height: 30rpx;
  font-size: 22rpx;
  color: #939499;
}
.close::after{
  border: 0;
}
.close{
  border: 1rpx solid #f3f3f3;
  font-size: 27rpx;
