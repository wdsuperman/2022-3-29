/* pages/index/goods.wxss */
.search{
    height: 95rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 0 55rpx;
    display: flex;
    align-items: center;
    border-bottom: 5rpx solid #f2f2f2;
    font-size: 28rpx;
}
.search image{
    width: 30rpx;
	height: 30rpx;
    /* background-color: #8b8b8b; */
    margin-left: auto;
    flex-shrink: 0;
}
.tab{
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
    color: #8b8b8b;
    line-height: 68rpx;
    padding-top: 26rpx;
}
.active{
    color: #1f1f1f;
    font-weight: bold;
    border-bottom: 5rpx solid #29a072;
}
.img{
    width: 124rpx;
    height: 124rpx;
    border-radius: 10rpx;
    flex-shrink: 0;
    margin-right: 28rpx;
}
.icon{
    width: 45rpx;
    height: 45rpx;
    margin-left: auto;
}
.lists{
    width: 672rpx;
    margin: 0 auto;
    /* height: 68vh; */
    overflow: scroll;
}
.lists>view{
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 25rpx;
    color: #29a072;
    margin-top: 50rpx;
    line-height: 38rpx;
}
.title{
    color: #1f1f1f;
    font-size: 30rpx;
    font-weight: bold;
}
.add{
	width: 670rpx;
	height: 90rpx;
	background-image: linear-gradient(179deg, 
		#fc6065 0%, 
		#f3454b 100%), 
	linear-gradient(
		#e60012, 
		#e60012);
    border-radius: 45rpx;
    color: #ffffff;
    font-size: 30rpx;
    text-align: center;
    line-height: 90rpx;
    position: fixed;
    bottom: 95rpx;
    left: 50%;
    margin-left: -335rpx;
}
input{
    width: 100%;
    height: 100%;
}
scroll-view{
    height: 68vh;
}