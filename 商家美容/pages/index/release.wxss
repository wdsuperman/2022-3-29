/* pages/index/release.wxss */
page {
    padding-bottom: 50rpx;
}

.inp {
    font-size: 30rpx;
    margin-top: 20rpx;
}

.wrap {
    width: 690rpx;
    margin: 0 auto;
}

input {
    height: 70rpx;
    width: 100%;
}

.price {
    display: flex;
    align-items: center;
}

textarea {
    line-height: 48rpx;
    font-size: 28rpx;
    width: 695rpx;
    height: 202rpx;
    background-color: #fbf7f8;
    border-radius: 5rpx;
    box-sizing: border-box;
    padding: 20rpx;
    margin-top: 15rpx;
}

