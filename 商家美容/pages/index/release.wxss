.btn {
    width: 670rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    margin-top: 80rpx;
}

.btn>button {
    width: 300rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 45rpx;
    font-size: 30rpx;
}

.b1 {
    background-image: linear-gradient(179deg,
            #fc6065 0%,
            #f3454b 100%),
        linear-gradient(#e60012,
            #e60012);
    color: #ffffff;
}

.b2 {
    background-color: #eeeeee;
    color: #8b8b8b;
}

button::after {
    border: 0;
}

radio-group {
    width: 670rpx;
    margin: 0 auto;
    margin-top: 50rpx;
}

radio {
    width: 100%;
    border-bottom: 2rpx solid #f3f3f3;
    height: 84rpx;
    line-height: 84rpx;
    font-size: 30rpx;
    color: #4b4b4b;
}

.wux-upload {
    margin-top: 20rpx;
}