/* pages/login/index.wxss */
.topImg{
    width: 100%;
    height: 305rpx;
    display: block;
}
.inp{
    border-bottom: 4rpx solid #f5f5f5;
    align-items: center;
    display: flex;
    width: 600rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 auto;
    font-size: 28rpx;
    margin-top: 40rpx;
}
.inp image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 40rpx;
}
.login{
    width: 626rpx;
	height: 87rpx;
	background-image: linear-gradient(90deg, 
		#39c68d 0%, 
		#2aa576 100%), 
	linear-gradient(
		#ffe60f, 
		#ffe60f);
	background-blend-mode: normal, 
		normal;
	box-shadow: 0rpx 8rpx 27rpx 0rpx 
		rgba(87, 103, 92, 0.35);
    border-radius: 43rpx;
    margin: 0 auto;
    text-align: center;
    color: #fafafa;
    font-size: 33rpx;line-height: 87rpx;
    margin-top: 92rpx;
}
.zc{
    font-size: 25rpx;
    color: #999999;
    display: flex;
    justify-content: center;
    margin-top: 30rpx;
    align-items: center;
}
.zc button {
    font-size: 25rpx;
    color: #39c68d;
    display: inline-block;
    padding: 0;
    margin: 0;
    background-color: #fff;
}
button::after{
    background-color: none;
    border: none;
    
}