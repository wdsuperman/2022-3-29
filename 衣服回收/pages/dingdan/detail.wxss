.back{
    height: 250rpx;
    background: linear-gradient(#4fc770, #5bcf88);
}

.status{
    width: 80%;
    margin: 0 auto;
    font-size: 24rpx;
    padding-top: 30rpx;

}
.bj{
    margin: 0 auto;
    text-align: center;
}
.status image{
    width: 50rpx;
    height: 50rpx;
    margin: 0 auto;
}
.blline{
    width: 31%;
    height: 2rpx;
    background-color: black;
    margin-top: -30rpx;
}
.time{
    color: #059500;
    font-size: 26rpx;
    text-align: center;
    margin-top: 50rpx;
}
.time1{
    font-size: 22rpx;
    color: #059500;
    text-align: center;
    line-height: 100rpx;
}
.t1{
    font-size: 47rpx;
    font-weight: bold;
}
.info{
    font-size: 26rpx;

 
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 60rpx;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
}
.line{
    margin: 30rpx 0;
    width: 100%;
    height: 2rpx ;
    background-color: #e5e5e5;
}
.userInfo{
    font-size: 24rpx;
    width: 80%;
    margin: 0 auto;
    line-height: 50rpx;
    color: #848081;
}
.dingdan{
    font-weight: bold;
    color: #059500;
}
.type{
    color: #059500;
    font-size: 30rpx;
    font-weight: bold;
}
.btn{
    position: fixed;
    bottom: 0;
    display: flex;
    left: 0;
    border-top: 2rpx solid #e5e5e5;
    width: 100%;
}
button::after{
    border: 0;
}
button{
    line-height: 100rpx;
    height: 100rpx;
    color: #059500;
    width: 100%;
    font-size: 26rpx;
    border-radius: 0;
}
.btn1{
    border-right: 2rpx solid #e5e5e5;
}
.dz{
    font-weight: bold;
    color: #059500;
    font-size: 30rpx;
}
.content{
    width: 90%;
    margin: 0 auto;
    border-radius: 10rpx;
    box-shadow: 0 10rpx 10rpx 10rpx #dbdbdb;
    background-color: #fff;
    margin-top: -45rpx;
    padding: 2%;
}