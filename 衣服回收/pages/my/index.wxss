/* pages/my/index.wxss */
.top{
    background-color: #66e093;
    background-image: linear-gradient(#5fde87, #66e093);
    text-align: center;
    margin: 0 auto;
    color: #fff;
    align-items: center;
    font-size: 26rpx;
    padding: 40rpx 10% 80rpx 10%;
}
.avatar{
    margin: 0 auto;
    display: flex;
    width: 100rpx;
    height: 100rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
    overflow: hidden;
}
.info{
    margin-left: 20rpx;
}
.lists{
    width: 100%;

}
.btnLists{
    display: flex;
    align-items: center;
}
.icon{
    height: 40rpx;
    width: 40rpx;
    margin-right: 20rpx;
}
.arrow{
    width: 50rpx;
    height: 60rpx;
    margin-left: auto;
}
button{
    background-color: #fff;
    color: #333;
    font-size: 26rpx;
    border: solid 1rpx #f5f5f5;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    box-shadow: 5rpx 5rpx 10rpx 3rpx #eee;
}
button::after{
    border: 0;
}
.xieyi{
    position: fixed;
    bottom: 20rpx;
    width: 120rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #ccc;
    color: #ccc;
    text-align: center;
    left: 50%;
    margin-left: -60rpx;
}