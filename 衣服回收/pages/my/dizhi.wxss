/* pages/my/dizhi.wxss */
page{
    background-color: #fdfdfd;
}
button{
    color: #fff;
    background-color: #55d781;
    font-size: 30rpx;
    width: 90%;
    border-radius: 20rpx;
    position: fixed;
    bottom: 100rpx;
    margin-left: 5%;
    
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}
button::after{
    border: 0;
}

.dzIcon{
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto;
    margin-top: 25%;
}
.noneDz{
    font-size: 26rpx;
    color: #bababa;
    text-align: center;
}



.dzLists{
    width: 90%;
    margin: 0 auto;
    margin-top: 40rpx;
    background-color: #fff;
    box-shadow: 0 0 5rpx 3rpx #888888;
    padding:2%;
    border-radius: 20rpx;
}
.dzLists image{
    width: 35rpx;
    height: 35rpx;
    flex-shrink: 0;
    margin-top: 27rpx;
}
.name{
    font-size: 26rpx;
}
.tel{
    padding-left: 20rpx;
    font-size: 24rpx;
    color: #cdcdcd;
}

.dizhi{
    color: #7b7b7b;
    font-size: 24rpx;
   
}
.moren{
    color: #4de06b;
    font-size: 24rpx;
    width: 50rpx;
    text-align: center;
   
}
.flex-start{
    justify-content:  flex-start;
}
.del{
    color: #aeaeae;
    font-size: 28rpx;
    margin-top: 26rpx;
}


