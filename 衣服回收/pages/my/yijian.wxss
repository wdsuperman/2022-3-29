
button{
    color: #fff;
    background-color: #1e8f3b;
    font-size: 30rpx;
    width: 90%;
    border-radius: 100rpx;
    position: fixed;
    bottom: 100rpx;
    margin-left: 5%;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}
button::after{
    border: 0;
}
.list{
    display: flex;
    align-items: center;
    width: 100%;
    padding: 0 5%;
    background-color: #fff;
    margin-bottom: 30rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
    box-sizing: border-box;
}
.listWrap{
    width: 100%;
    padding: 0 5%;
    background-color: #fff;
    margin-bottom: 30rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
    box-sizing: border-box;
    padding-bottom: 30rpx;
}
.arrow{
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}
.pick{
    display: flex;
    align-items: center;
}
input{
    padding-left: 10rpx;
    text-indent: 10rpx;
    line-height: 80rpx;
    height: 80rpx;
}
.picker{
    height: 80rpx;
    line-height: 80rpx;
    justify-content: space-between;
}
textarea{
    background-color: #fff;
    width: 100%;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
    padding: 30rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    
}
.update{
    background-color: #eee;
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    color: #999;
    text-align: center;
    padding-top: 30rpx;
    box-sizing: border-box;
}
.add{
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto;
}
.upImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    border: 1rpx solid #eee;
}
.line{
    line-height: 70rpx;
}
.del{
    width: 40rpx;
    height: 40rpx;
    position:  absolute;
    top: 10rpx;
    right: 10rpx;
}
.posi{
    position: relative;
    width: 200rpx;
    height: 200rpx;
}