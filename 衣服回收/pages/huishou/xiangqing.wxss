/* pages/dingdan/detail.wxss */
.time{
    color: #059500;
    font-size: 26rpx;
    text-align: center;
    margin-top: 50rpx;
}
.time1{
    font-size: 22rpx;
    color: #059500;
    text-align: center;
    line-height: 100rpx;
}
.t1{
    font-size: 47rpx;
    font-weight: bold;
}
.info{
    font-size: 26rpx;
    width: 90%;
    margin: 0 auto;
    border-radius: 20rpx;
    background-color: #dbf9e5;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 60rpx;
    padding: 20rpx 45rpx;
    box-sizing: border-box;
}
.line{
    margin: 30rpx 0;
    width: 100%;
    height: 2rpx ;
    background-color: #e5e5e5;
}
.userInfo{
    font-size: 26rpx;
    width: 80%;
    margin: 0 auto;
    line-height: 50rpx;
    color: #535353;
}
.dingdan{
    font-weight: bold;
    color: #059500;
}
.type{
    color: #059500;
    font-size: 30rpx;
    font-weight: bold;
}
.btn{
    position: fixed;
    bottom: 0;
    display: flex;
    left: 0;
    border-top: 2rpx solid #e5e5e5;
    width: 100%;
}
button::after{
    border: 0;
}
button{
    line-height: 100rpx;
    height: 100rpx;
    color: #059500;
    width: 100%;
    font-size: 26rpx;
    border-radius: 0;
}
.btn1{
    border-right: 2rpx solid #e5e5e5;
}
.dz{
    font-weight: bold;
    color: #059500;
    font-size: 30rpx;
}
.name{
    display: flex;
    align-items: center;
}
.name image{
    width: 50rpx;
    height: 50rpx;
    margin-left: 30rpx;
    margin-right: 10rpx;
}
.tel{
    display: flex;
    align-items: center;
    font-size: 22rpx;
}
.pj{
    margin-top: 30rpx;
}
.img image{
    width: 52rpx;
    height: 52rpx;
}
.img{
    width: 400rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 20rpx auto;
}
.pjy{
    height: 250rpx;
    overflow: scroll;
}