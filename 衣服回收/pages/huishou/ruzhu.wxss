/* pages/my/huishoudizhi.wxss */
page{
    padding-bottom: 100rpx;
}
button{
    color: #fff;
    background-color: #1e8f3b;
    font-size: 30rpx;
    width: 90%;
    border-radius: 100rpx;
    position: fixed;
    bottom: 10rpx;
    margin-left: 5%;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
}
button::after{
    border: 0;
}
.yueyIcon{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
.inp{
    display: flex;
    align-items: center;
    font-size: 28rpx;
    width: 90%;
    margin: 0 auto;
    border-bottom: 2rpx solid #eee;
    color: #333;
}

.inpText{
    width: 130rpx;
    line-height: 80rpx;
    flex-shrink: 0;
}
input{
    line-height: 80rpx;
    height: 80rpx;
    width: 100%;
}
.top{
    color: #808080;
    width: 100%;
}
.wrap{
    background-color: #fff;
    border-bottom: 2rpx solid #eee;
}
.dz{
    justify-content: space-between;
    border: 0;
}
.line{
    line-height: 70rpx;
}
.del{
    width: 40rpx;
    height: 40rpx;
    position:  absolute;
    top: 10rpx;
    right: 10rpx;
}
.posi{
    position: relative;
    width: 200rpx;
    height: 200rpx;
}
.add{
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto;
}
.upImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    border: 1rpx solid #eee;
}
.update{
    background-color: #eee;
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    color: #999;
    text-align: center;
    padding-top: 30rpx;
    box-sizing: border-box;
}
.listWrap{
    width: 100%;
    padding: 0 5%;
    background-color: #fff;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
    box-sizing: border-box;
    padding-bottom: 30rpx;
    margin-top: 20rpx;
}
.down{
    border-bottom: 0;
}